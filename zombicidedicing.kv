<PlusMinusButton@Button>:
    font_size: '20dp'
    background_normal: 'data/red700.png'
    background_down: 'data/red500.png'

<MainWidget>:
    canvas.before:
        Color:
            rgb: (0.13, 0.13, 0.13)
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: 'horizontal'
    padding: '7dp'
    spacing: '7dp'

    BoxLayout:

        id: dice_1
        orientation: 'vertical'

        FloatLayout:
            spacing: '5dp'
    
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.3
                pos_hint: {'x': 0, 'y': .7}

                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        id: num_1
                        text: '1'
                        font_size: '135dp'
                    Label:
                        text: '# of dice'
                        font_size: '13dp'
                        size_hint_y: 0.1
    
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        id: win_1
                        text: '6'
                        font_size: '135dp'
                    Label:
                        text: 'or better'
                        font_size: '13dp'
                        size_hint_y: 0.1


            Label:
                canvas.before:
                    Color:
                        rgb: (0.19, 0.19, 0.19)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: expected_1
                size_hint_y: 0.15
                pos_hint: {'x': 0, 'y': 0.52}
                text: 'Avg: 0.17'
                font_size: '30dp'
                bold: True
                valign: 'middle'
    
            ScrollView:
                size_hint_y: 0.53
                pos_hint: {'x': 0, 'y': 0}
                canvas.before:
                    Color:
                        rgb: (0.19, 0.19, 0.19)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                GridLayout:
                    id: odds_1
                    cols: 3
                    spacing: '10dp'
                    row_force_default: True
                    row_default_height: '30dp'

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.04
                pos_hint: {'x': 0, 'y': .65}
                    
                Label:
                    size_hint_x: 0.15

                PlusMinusButton:
                    id: minus_1
                    text: '-'
                    on_press: num_1.text = root.decrease_num(num_1.text)
                    on_release: root.change_odds()
    
                PlusMinusButton:
                    id: plus_1
                    text: '+'
                    on_press: num_1.text = str(int(num_1.text) + 1)
                    on_release: root.change_odds()
                
                Label:
                    size_hint_x: 0.15

                PlusMinusButton:
                    id: win_minus_1
                    text: '-'
                    on_press: win_1.text = root.decrease_num(win_1.text)
                    on_release: root.change_odds()

                PlusMinusButton:
                    id: win_plus_1
                    text: '+'
                    on_press: win_1.text = root.increase_num(win_1.text)
                    on_release: root.change_odds()

                Label:
                    size_hint_x: 0.15

    BoxLayout:

        id: dice_2
        orientation: 'vertical'

        FloatLayout:
            spacing: '5dp'
    
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.3
                pos_hint: {'x': 0, 'y': .7}

                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        id: num_2
                        text: '1'
                        font_size: '135dp'
    
                    Label:
                        text: '# of dice'
                        font_size: '13dp'
                        size_hint_y: 0.1
    
    
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        id: win_2
                        text: '6'
                        font_size: '135dp'
                    Label:
                        text: 'or better'
                        font_size: '13dp'
                        size_hint_y: 0.1


            Label:
                canvas.before:
                    Color:
                        rgb: (0.19, 0.19, 0.19)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: expected_2
                size_hint_y: 0.15
                pos_hint: {'x': 0, 'y': 0.52}
                text: 'Avg: 0.17'
                font_size: '30dp'
                bold: True
                valign: 'middle'
    
            ScrollView:
                size_hint_y: 0.53
                pos_hint: {'x': 0, 'y': 0}
                canvas.before:
                    Color:
                        rgb: (0.19, 0.19, 0.19)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                GridLayout:
                    id: odds_2
                    cols: 3
                    spacing: '10dp'
                    row_force_default: True
                    row_default_height: '30dp'

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.04
                pos_hint: {'x': 0, 'y': .65}
                    
                Label:
                    size_hint_x: 0.15

                PlusMinusButton:
                    id: minus_2
                    text: '-'
                    on_press: num_2.text = root.decrease_num(num_2.text)
                    on_release: root.change_odds()
    
                PlusMinusButton:
                    id: plus_2
                    text: '+'
                    on_press: num_2.text = str(int(num_2.text) + 1)
                    on_release: root.change_odds()
                
                Label:
                    size_hint_x: 0.15

                PlusMinusButton:
                    id: win_minus_2
                    text: '-'
                    on_press: win_2.text = root.decrease_num(win_2.text)
                    on_release: root.change_odds()

                PlusMinusButton:
                    id: win_plus_2
                    text: '+'
                    on_press: win_2.text = root.increase_num(win_2.text)
                    on_release: root.change_odds()

                Label:
                    size_hint_x: 0.15
